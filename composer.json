{
    "name": "lirien/lirien-env",
    "description": "A minimal and straightforward .env file loader for PHP",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Lirien\\Support\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Cl√°udio Victor",
            "email": "barrosclaudio147@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.1"
    },
    "scripts": {
        "copy-env": "@php -r \"if (!file_exists('.env') && file_exists('.env.example')) { copy('.env.example', '.env'); }\"",
        "post-install-cmd": [
            "@php -r \"if (!file_exists('.env') && file_exists('.env.example')) { copy('.env.example', '.env'); }\""
        ]
    },
    "config": {
        "sort-packages": true,
        "preferred-install": "dist"
    }
}